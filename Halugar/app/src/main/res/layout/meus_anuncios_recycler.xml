<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LayoutMeuAnuncio"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ivMeuAnuncioRV"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_launcher_background"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvCidadeEstadoMeuAnuncioRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPrecoMeuAnuncioRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="..."
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBairroMeuAnuncioRV" />

    <TextView
        android:id="@+id/tvCidadeEstadoMeuAnuncioRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="18sp"
        android:autoSizeTextType="uniform"
        android:baselineAligned="false"
        android:maxWidth="300dp"
        android:text="..."
        android:visibility="visible"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvBairroMeuAnuncioRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivMeuAnuncioRV" />

    <TextView
        android:id="@+id/tvBairroMeuAnuncioRV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="18sp"
        android:autoSizeTextType="uniform"
        android:baselineAligned="false"
        android:maxWidth="300dp"
        android:text="..."
        android:visibility="visible"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvPrecoMeuAnuncioRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCidadeEstadoMeuAnuncioRV" />

    <ImageButton
        android:id="@+id/btnInformacoesMeuAnuncio"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="center"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="@+id/ivMeuAnuncioRV"
        app:layout_constraintStart_toStartOf="@+id/ivMeuAnuncioRV"
        app:srcCompat="@drawable/ic_informacoes" />

    <ImageButton
        android:id="@+id/btnFotosMeuAnuncio"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="@+id/ivMeuAnuncioRV"
        app:layout_constraintEnd_toEndOf="@+id/ivMeuAnuncioRV"
        app:srcCompat="@drawable/ic_fotos" />
</androidx.constraintlayout.widget.ConstraintLayout>